<h1>Listing plays</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Poster</th>
    <th>Body</th>
    <th>Updated</th>
    <th>Tag</th>
    <th>Speaker</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plays.each do |play| %>
  <tr>
    <td><%= play.name %></td>
    <td><%= play.url %></td>
    <td><%= play.poster %></td>
    <td><%= play.body %></td>
    <td><%= play.updated %></td>
    <td><%= play.tag %></td>
    <td><%= play.speaker %></td>
    <td><%= link_to 'Show', play %></td>
    <td><%= link_to 'Edit', edit_play_path(play) %></td>
    <td><%= link_to 'Destroy', play, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

